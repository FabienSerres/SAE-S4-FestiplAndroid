<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_anonymous"
        android:layout_marginTop="@dimen/margin_top_100"
        android:src="@drawable/anonymous" />

    <EditText
        android:id="@+id/txt_id"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/little_margin"
        android:gravity="center"
        android:inputType="text"
        android:hint="@string/help_id"/>

    <EditText
        android:id="@+id/txt_password"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/little_margin"
        android:gravity="center"
        android:inputType="textPassword"
        android:hint="@string/help_password"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_top_25"
        android:id="@+id/txt_connection"
        android:textColor="@color/red"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/little_margin"
        android:text="@string/btn_connect"
        android:layout_marginTop="@dimen/margin_top_50"
        android:onClick="connectAction"
        android:backgroundTint="@color/blue"
        android:id="@+id/btn_connect"/>


</TableLayout>